<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/main_scene"
    tools:showPaths="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_sky_color"/>

    <ImageView
        android:id="@+id/iv_sky_left"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:src="@drawable/ic_sky_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/sky_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_default"
        app:tint="@color/white"/>

    <ImageView
        android:id="@+id/iv_sky_right"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:src="@drawable/ic_sky_icon"
        android:layout_marginTop="@dimen/sky_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"/>

    <ImageView
        android:id="@+id/iv_star_left"
        android:layout_width="@dimen/start_size"
        android:layout_height="@dimen/start_size"
        android:src="@drawable/ic_star"
        android:layout_marginTop="@dimen/sky_margin_top"
        android:layout_marginLeft="@dimen/sky_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/sun_hide_color"/>

    <ImageView
        android:id="@+id/iv_star_right"
        android:layout_width="@dimen/start_size"
        android:layout_height="@dimen/start_size"
        android:src="@drawable/ic_star"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/sky_margin_top"
        android:layout_marginRight="@dimen/sky_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/sun_hide_color"/>

    <ImageView
        android:id="@+id/iv_moon"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:src="@drawable/ic_moon_part"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_sun"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:src="@drawable/ic_sun"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintTag="sun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_house"
        android:layout_width="@dimen/sky_margin_top"
        android:layout_height="@dimen/sky_margin_top"
        android:src="@drawable/ic_house"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/contentStreet"/>

    <ImageView
        android:id="@+id/iv_moutain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_mountain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_mountain"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentStreet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_margin_top"
        android:background="@color/street_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="@dimen/size_car"
        android:layout_height="@dimen/size_car"
        android:src="@drawable/ic_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>